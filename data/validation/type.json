{
    "data.json": {
        "interface.name": {
            "class": "required"
        },
        "interface.mac": {
            "type": "mac",
            "class": "required"
        },
        "save_to.path": {
            "class": "required"
        },
        "executables.screen": {
            "default_value": "screen",
            "class": "warn"
        },
        "executables.tcpdump": {
            "default_value": "tcpdump",
            "class": "warn"
        },
        "packets_count": {
            "default_value": 100,
            "type": "int"
        },
        "save_to.format": {
            "default_value": ".txt"
        },
        "backup.dir": {
            "default_value": "backup",
            "type": "alphanumeric"
        },
        "backup.timeout": {
            "default_value": 60,
            "type": "int"
        },
        "logs.screen": {
            "default_value": false,
            "type": "bool"
        },
        "logs.skipped_packets": {
            "default_value": false,
            "type": "bool"
        }
    },
    "users.json": {
        "name": {
            "class": "required",
            "type": "alphanumeric"
        },
        "mac": {
            "class": "required",
            "type": "mac"
        }
    }
}
